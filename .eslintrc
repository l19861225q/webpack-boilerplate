{
  "parser": "babel-eslint",
  "parserOptions": {
    "sourceType": "module",
    "ecmaVersion": 6,
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "extends": [
    "standard"
  ],
  "plugins": [
    "babel",
    "promise",
    "html"
  ],
  "env": {
    "browser": true,
    "node": true,
    "es6": true
  },
  "globals": {
    "__DEV__": false,
    "__TEST__": false,
    "__PROD__": false
  },
  "rules": {
    "comma-dangle": "off",
    "eol-last": 0,
    "import/named": 0,
    "key-spacing": "off",
    "max-len": [2, 120, 2],
    "no-alert": 0,
    "no-console": 0,
    "no-debugger": 1,
    "no-lone-blocks": 0,
    "no-trailing-spaces": 0,
    "no-underscore-dangle": 0,
    "no-var": 1,
    "object-curly-spacing": [2, "always"],
    "quotes": 0,
    "semi": 0
  }
}
